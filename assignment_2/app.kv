# Create your Kivy layout in the kv language here
BoxLayout:
    orientation:"horizontal"
    BoxLayout:
        orientation:"vertical"
        size_hint_x: 0.4
        Label:
            text: "Sort by"
        Spinner:
            id: criteria_selection
            text: app.current_option
            values: app.spinner_options
            on_text: app.change_option(self.text)
        Label:
            text: "Add New Place..."
        Label:
            text: "Name"
        TextInput:
            id: input_name
            on_text: app.get_name()
            multiline: False
            write_tab: False
        Label:
            text: "Country"
        TextInput:
            id: input_country
            on_text: app.get_country()
            multiline: False
            write_tab: False
        Label:
            text: "Priority"
        TextInput:
            id: input_priority
            on_text: app.get_priority()
            multiline: False
            write_tab: False
        Button:
            text: "Add Place"
            on_press: app.add_places()
        Button:
            text: "Clear"
            on_press: app.clear()
    BoxLayout:
    # layout of spinner.
        orientation: 'vertical'
    BoxLayout:
        size_hint_y: 0.1
        orientation: 'horizontal'
        Spinner:
            id: Sort
            text: app.sort_option
            values: app.spinner_options
            on_text: app.change_sort(self.text)
        Label:
            id: output_label
            font_size: 48
            color: (1, 1, 0.9, 1)
    Label:
        text: 'Sort By:'
        font_size: 48
        size_hint_y: 0.9




